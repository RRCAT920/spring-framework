<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 注册Person对象，Spring会自动创建该对象 -->
<!-- 一个bean标签注册一个组件-->
<!--    class：组件的全类名-->
<!--    id: 组件的唯一标识-->
    <bean id="person01" class="com.huzihao.bean.Person">
<!--        使用property标签为组件的属性赋值-->
<!--        name：属性名-->
<!--        value: 属性值-->
        <property name="lastName" value="张三"/>
        <property name="age" value="18"/>
        <property name="email" value="102132@qq.com"/>
        <property name="gender" value="男"/>
    </bean>

    <bean id="person02" class="com.huzihao.bean.Person">
        <property name="lastName" value="张三"/>
    </bean>
</beans>